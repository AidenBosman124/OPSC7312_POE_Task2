<!-- bird_list_item.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".BirdListAdapter">

    <Button
        android:id="@+id/btnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_blue"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        android:text="Main Page" />

    <ImageView
        android:id="@+id/birdImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/btnMain"
        android:src="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btnMain"
        android:layout_toEndOf="@id/birdImage"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/birdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bird Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/birdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-10-20"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/birdLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
