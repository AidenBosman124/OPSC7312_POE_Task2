<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Checklistsfrag"
    android:background="@drawable/bkgimg">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="167dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:text="Checklists/Observations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="160dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:text="DATE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <EditText
        android:id="@+id/txtcheklistdate"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="When Did You End"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <Button
        android:id="@+id/btminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/light_blue"
        android:text="Minus"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcheklistdate" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/light_blue"
        android:text="Plus"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toEndOf="@+id/btminus"
        app:layout_constraintTop_toBottomOf="@+id/txtcheklistdate" />

    <EditText
        android:id="@+id/txtcheliststarttime"
        android:layout_width="169dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="When Do You Start"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="84dp"
        android:text="START TIME"
        app:layout_constraintStart_toEndOf="@+id/btminus"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="386dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="116dp"
        android:background="@color/white"
        android:text="Created and submitted Checklists/Observations stored here."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="SUBMITTED"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtcheclistsubmitted"
        app:layout_constraintEnd_toEndOf="@+id/txtcheclistsubmitted" />


    <EditText
        android:id="@+id/txtcheclistsubmitted"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/white"
        android:contentDescription="Enter Submitted Checklist Text"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtcheclistnotsubmitted"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <EditText
        android:id="@+id/txtcheclistnotsubmitted"
        android:layout_width="188dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/white"
        android:contentDescription="Enter Not Submitted Checklist Text"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        android:text="NOT SUBMITTED"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txtcheclistnotsubmitted"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="127dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toStartOf="@+id/textView23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
